<!--pages/courseEdit/index.wxml-->
<view class="course-edit">
  <view class='r-item'>
    <view class='i-left'>课程名称</view>
    <view class='i-right' >
    <picker bindchange="namePickerChange" value="{{index}}" range="{{courseNames}}" range-key="name" class='picker-wrap'>
        <view class="picker">
          <text wx:if="{{selectCourseObj.name}}">{{selectCourseObj.name}}</text>
          <text wx:else class='placeholder'>请选择课程</text>
        </view>
      </picker>
    </view>
  </view>
  <view class='r-item'>
      <view class='i-left'>开始时间</view>
      <view class='i-right'>
        <picker mode="date" value="{{startTime}}" data-type="start" bindchange="bindTimeChange">
          <view class="picker">
            <text wx:if="{{startTime}}">{{startTime}}</text>
            <text wx:else class='placeholder'>请选择</text>
          </view>
        </picker>
      </view>
    </view>
    <view class='r-item'>
      <view class='i-left'>结束时间</view>
      <view class='i-right'>
          <picker mode="date" value="{{endTime}}" data-type="end" bindchange="bindTimeChange">
            <view class="picker">
              <text wx:if="{{endTime}}">{{endTime}}</text>
              <text wx:else class='placeholder'>请选择</text>
            </view>
          </picker>
      </view>
      </view>
    <view class='btn-wrap'>
      <button class="submit-btn" bindtap='submit'>提交</button>
    </view>
    
</view>

