/* pages/commentEdit/index.wxss */

.write-comment {
  width: 100%;
  position: relative;
  background-color: #fff;
}

.write {
  padding: 20rpx;
}

.write p {
  height: 80rpx;
  line-height: 48rpx;
  font-size: 30rpx;
}

.write .star {
  padding: 12rpx 0 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.level-text{
  line-height: 80rpx;
  text-align: center;
  color: #999;
}
.level-textc{
  line-height: 80rpx;
  text-align: center;
  color: #333;
}
.write .star-img {
  display: flex;
  flex-direction: column;
}

.write .start-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 0 4rpx;
}

.text-box {
  padding: 20rpx;
  height: 200rpx;
  font-size: 26rpx;
  margin: 0 32rpx;
  border:1px solid #eee;
width:auto;
}

.bom-text {
  color: #999;
  font-size: 20rpx;
  padding: 20rpx 20rpx 0 0;
  text-align: right;
}

.publish-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  padding: 0;
  background: greenyellow;
  margin: 32rpx 20rpx 0 20rpx;
}

.publish-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
