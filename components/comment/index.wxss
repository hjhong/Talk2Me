/* components/comment/index.wxss */
.tc-comment{
  background: #fff;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.tc-comment .split{
  color: #eee;
  margin: 0 16rpx;
}
.tc-comment .title{
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0;
}
.cm-li{
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 10rpx;
}
.cm-li .total-text{
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.cm-li .ndt{
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}
.cm-level{
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.level-item{
  background-color: #FEE;
  color: #666;
  margin-right: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 100rpx;
  padding: 0 20rpx;
  min-width: 80rpx;
  text-align: center;
}

.level-active{
  background-color: #FF0036;
  color: #FFF;
  margin-right: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 100rpx;
  padding: 0 20rpx;
  min-width: 80rpx;
  text-align: center;
}
.bad-item{
  background-color: #f5f5f5;
  color: #666;
  margin-right: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 100rpx;
  padding: 0 20rpx;
  min-width: 80rpx;
  text-align: center;
}
.empty-component{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}
