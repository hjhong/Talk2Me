/* components/comment/index.wxss */
.tc-comment{
  background: #fff;
  padding: 32rpx;
}
.tc-comment .split{
  color: #eee;
  margin: 0 16rpx;
}
.tc-comment .title{
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0;
}
.cm-li{
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 10rpx;
}
.cm-li .total-text{
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.cm-li .ndt{
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}
.cm-level{
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.cm-level text{
  margin-right: 30rpx;
}