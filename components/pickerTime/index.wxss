/* components/pickTime/index.wxss */
@-webkit-keyframes slideup{
  from{
    bottom: -300rpx;
  }
  to{
    bottom: 0;
  }
}

@-webkit-keyframes fadein{
  from{
    background: rgba(0, 0, 0, 0)
  }
  to{
    background: rgba(0, 0, 0, 0.5)
  }
}

.picker-city-container {
  animation: fadein 300ms forwards;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 29;
  text-align: center;
}

.picker-city-body {
  animation: slideup 300ms ease forwards;
  box-sizing: border-box;
  width: 100%;
  position: fixed;
  background: white;
}

.picker-city-weight {
  width: 100%;
  height: 440rpx;
}

.picker-city-btnbar {
  font-size: 28rpx;
  background: white;
  display: flex;
}

.picker-city-btnbar-left {
  color: #666;
  flex: 1;
  text-align: left;
  padding: 32rpx 0 0 32rpx;
  font-size:40rpx;
}

.picker-city-btnbar-right {
  color: #4164e1;
  flex: 1; 
  text-align: right;
  padding: 32rpx 32rpx 0 0;
  font-size:40rpx;
}
.picker-city-body .pick-item{
  line-height: 50px;
  font-size: 40rpx;
}